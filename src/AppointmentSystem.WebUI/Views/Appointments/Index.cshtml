@{
    ViewData["Title"] = "Consultar Mis Citas";
}

<h2>Consultar Mis Citas</h2>
<p>Ingrese su correo electrónico para ver el historial de sus próximas citas.</p>

<form asp-action="List" method="post">
    <div class="form-group">
        <label>Correo Electrónico</label>
        <input name="email" type="email" required />
    </div>
    <button type="submit" class="btn btn-primary">Buscar Citas</button>
</form>
