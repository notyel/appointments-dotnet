<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Citas</title>
    <!-- Iconos del Layout Cliente -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/forms.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/client-portal.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="client-layout">
    <header class="client-header">
        <div class="client-header-content">
            <a asp-controller="Home" asp-action="Index" class="client-logo">
                <span class="material-symbols-outlined">spa</span>
                <span>Sistema de Citas</span>
            </a>
            <nav class="client-nav">
                <a asp-controller="Home" asp-action="Index">
                    <span>Nuestros Servicios</span>
                </a>
                <a asp-controller="Home" asp-action="About">
                    <span>Nosotros</span>
                </a>
                <a asp-controller="Home" asp-action="Contact">
                    <span>Contacto</span>
                </a>
            </nav>
            <div class="client-user-info">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Appointments" asp-action="Index" class="nav-link-minimal">
                        <span class="material-symbols-outlined">event</span>
                        <span>Mis Citas</span>
                    </a>
                    <span class="user-name">
                        <span class="material-symbols-outlined">account_circle</span>
                        <span>@User.Identity.Name</span>
                    </span>
                    <a asp-controller="Account" asp-action="Logout" class="btn btn-sm btn-secondary">Cerrar Sesión</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-login">Acceso Administrativo</a>
                }
            </div>
        </div>
    </header>

    <main class="client-main">
        @RenderBody()
    </main>

    <footer class="client-footer">
        <div class="client-footer-content">
            <p>&copy; @DateTime.Now.Year - Sistema de Citas</p>
            <a asp-controller="Home" asp-action="Privacy">Política de Privacidad</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
