<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppointmentSystem</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <h1>Gestión de Citas</h1>
    </header>
    <nav>
        <a asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
        <a asp-area="" asp-controller="Appointments" asp-action="Index">Mis Citas</a>
        @if (User.IsInRole("Admin") || User.IsInRole("BranchAdmin") || User.IsInRole("Receptionist"))
        {
            <a asp-area="" asp-controller="Admin" asp-action="Index">Panel Admin</a>
        }
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a asp-controller="Account" asp-action="Logout">Cerrar Sesión</a>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login">Entrar</a>
        }
    </nav>
    <main role="main" class="container">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            &copy; 2024 - Sistema de Gestión de Citas - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
