@{
    ViewData["Title"] = "Nosotros";
}

<div class="about-container">
    <div class="about-content">
        @Html.Raw(ViewBag.ContentHtml)
    </div>
</div>

@section Styles {
    <style>
        .about-container {
            background: white;
            border-radius: 12px;
            padding: 3rem;
            max-width: 900px;
            margin: 0 auto;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.08);
        }

        .about-content h1 {
            color: #333;
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
            font-weight: 600;
        }

        .about-content h2 {
            color: #555;
            font-size: 1.75rem;
            margin-top: 2rem;
            margin-bottom: 1rem;
            font-weight: 500;
        }

        .about-content p {
            color: #666;
            line-height: 1.8;
            margin-bottom: 1rem;
            font-size: 1.05rem;
        }

        .about-content ul {
            list-style: none;
            padding-left: 0;
            margin: 1.5rem 0;
        }

        .about-content ul li {
            padding: 0.5rem 0;
            color: #666;
            font-size: 1.05rem;
        }

        .about-content ul li strong {
            color: #667eea;
            font-weight: 600;
        }

        .about-content hr {
            border: none;
            border-top: 2px solid #f0f0f0;
            margin: 2rem 0;
        }
    </style>
}
