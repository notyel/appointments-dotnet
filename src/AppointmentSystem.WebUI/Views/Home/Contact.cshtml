@{
    ViewData["Title"] = "Contacto";
    var config = ViewBag.AppConfig as AppointmentSystem.WebUI.Models.AppConfig;
}

<div class="contact-container">
    <div class="contact-hero">
        <h1>Contáctanos</h1>
        <p>Estamos aquí para ayudarte. Comunícate con nosotros a través de cualquiera de estos medios.</p>
    </div>

    <div class="contact-cards">
        <div class="contact-card">
            <div class="contact-icon">
                <span class="material-symbols-outlined">phone</span>
            </div>
            <h3>Teléfono</h3>
            <p>@config?.Contact.Phone</p>
        </div>

        <div class="contact-card">
            <div class="contact-icon">
                <span class="material-symbols-outlined">mail</span>
            </div>
            <h3>Correo Electrónico</h3>
            <p>@config?.Contact.Email</p>
        </div>

        <div class="contact-card">
            <div class="contact-icon">
                <span class="material-symbols-outlined">location_on</span>
            </div>
            <h3>Dirección</h3>
            <p>@config?.Contact.Address</p>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .contact-container {
            max-width: 900px;
            margin: 0 auto;
        }

        .contact-hero {
            background: white;
            border-radius: 12px;
            padding: 3rem;
            text-align: center;
            margin-bottom: 2rem;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.08);
        }

        .contact-hero h1 {
            color: #333;
            font-size: 2.5rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .contact-hero p {
            color: #666;
            font-size: 1.1rem;
            line-height: 1.6;
        }

        .contact-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
        }

        .contact-card {
            background: white;
            border-radius: 12px;
            padding: 2rem;
            text-align: center;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .contact-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 30px rgba(0, 0, 0, 0.12);
        }

        .contact-icon {
            width: 70px;
            height: 70px;
            margin: 0 auto 1.5rem;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .contact-icon .material-symbols-outlined {
            font-size: 2rem;
            color: white;
        }

        .contact-card h3 {
            color: #333;
            font-size: 1.25rem;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .contact-card p {
            color: #666;
            font-size: 1rem;
            line-height: 1.6;
        }
    </style>
}
