@{
    ViewData["Title"] = "Contacto";
    var config = ViewBag.AppConfig as AppointmentSystem.WebUI.Models.AppConfig;
}

<div class="content-narrow">
    <div class="contact-hero">
        <h1>Contáctanos</h1>
        <p>Estamos aquí para ayudarte. Comunícate con nosotros a través de cualquiera de estos medios.</p>
    </div>

    <div class="contact-cards">
        <div class="contact-card">
            <div class="contact-icon">
                <span class="material-symbols-outlined">phone</span>
            </div>
            <h3>Teléfono</h3>
            <p>@config?.Contact.Phone</p>
        </div>

        <div class="contact-card">
            <div class="contact-icon">
                <span class="material-symbols-outlined">mail</span>
            </div>
            <h3>Correo Electrónico</h3>
            <p>@config?.Contact.Email</p>
        </div>

        <div class="contact-card">
            <div class="contact-icon">
                <span class="material-symbols-outlined">location_on</span>
            </div>
            <h3>Dirección</h3>
            <p>@config?.Contact.Address</p>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .contact-hero {
            background: white;
            border-radius: var(--radius-xl);
            padding: var(--spacing-3xl);
            text-align: center;
            margin: var(--spacing-2xl) 0;
            box-shadow: var(--shadow-md);
        }

        .contact-hero h1 {
            color: var(--color-text);
            font-size: var(--font-size-4xl);
            margin-bottom: var(--spacing-md);
            font-weight: var(--font-weight-semibold);
        }

        .contact-hero p {
            color: var(--color-text-secondary);
            font-size: var(--font-size-lg);
            line-height: 1.6;
        }

        .contact-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: var(--spacing-xl);
            margin-bottom: var(--spacing-2xl);
        }

        .contact-card {
            background: white;
            border-radius: var(--radius-xl);
            padding: var(--spacing-2xl);
            text-align: center;
            box-shadow: var(--shadow-md);
            transition: all var(--transition-base);
        }

        .contact-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-lg);
        }

        .contact-icon {
            width: 70px;
            height: 70px;
            margin: 0 auto var(--spacing-xl);
            background: var(--gradient-primary);
            border-radius: var(--radius-full);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .contact-icon .material-symbols-outlined {
            font-size: var(--font-size-3xl);
            color: white;
        }

        .contact-card h3 {
            color: var(--color-text);
            font-size: var(--font-size-xl);
            margin-bottom: var(--spacing-sm);
            font-weight: var(--font-weight-semibold);
        }

        .contact-card p {
            color: var(--color-text-secondary);
            font-size: var(--font-size-base);
            line-height: 1.6;
        }

        @@media (max-width: 768px) {
            .contact-hero {
                padding: var(--spacing-xl);
            }

            .contact-hero h1 {
                font-size: var(--font-size-3xl);
            }

            .contact-cards {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

