@model IEnumerable<AppointmentSystem.Application.DTOs.ProfessionalDto>
@{
    ViewData["Title"] = "Seleccione un Profesional";
    ViewBag.CurrentStep = 3;
}

<div class="content">
    <partial name="_BookingStepper" />
</div>

<div class="content">
    <div class="step-header">
        <h1 class="step-title">Nuestros Especialistas</h1>
        <p class="step-description">Elija el profesional que le atender√°</p>
    </div>

    <div class="professionals-grid">
        @foreach (var prof in Model)
        {
            <div class="professional-card">
                <div class="professional-avatar">
                    @prof.FullName.Substring(0, 1).ToUpper()
                </div>
                <h3 class="professional-name">@prof.FullName</h3>
                <p class="professional-email">@prof.Email</p>
                <a asp-controller="Booking" asp-action="Slots"
                   asp-route-branchId="@ViewBag.BranchId"
                   asp-route-branchServiceId="@ViewBag.BranchServiceId"
                   asp-route-professionalId="@prof.Id"
                   class="btn btn-primary btn-block">
                    Ver Disponibilidad
                </a>
            </div>
        }
    </div>

    <div class="step-navigation">
        <a asp-controller="Booking" asp-action="Services" asp-route-branchId="@ViewBag.BranchId" class="btn btn-secondary">
            <span class="material-symbols-outlined">arrow_back</span>
            <span>Volver a Servicios</span>
        </a>
        <div></div>
    </div>
</div>
