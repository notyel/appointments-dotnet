@model IEnumerable<AppointmentSystem.Application.DTOs.ServiceDto>
@{
    ViewData["Title"] = "Seleccione un Servicio";
    ViewBag.CurrentStep = 2;
}

@section Styles {
    <!-- Iconos adicionales para esta vista -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@400&icon_names=schedule,local_offer,arrow_back" rel="stylesheet" />
}

<div class="content">
    <partial name="_BookingStepper" />
</div>

<div class="content">
    <div class="step-header">
        <h1 class="step-title">Servicios Disponibles</h1>
        <p class="step-description">Sucursal: <strong>@ViewBag.BranchName</strong></p>
    </div>

    <div class="options-grid">
        @foreach (var service in Model)
        {
            <div class="option-card">
                <div class="option-card-header">
                    <h3 class="option-card-title">@service.Name</h3>
                    <span class="option-card-badge">$@service.Price</span>
                </div>
                <div class="option-card-body">
                    <p class="option-card-text">@service.Description</p>
                    <div class="option-card-meta">
                        <div class="option-card-meta-item">
                            <span class="material-symbols-outlined option-card-meta-icon">schedule</span>
                            <span>@service.DurationMinutes min</span>
                        </div>
                        <div class="option-card-meta-item">
                            <span class="material-symbols-outlined option-card-meta-icon">local_offer</span>
                            <span>@service.Category</span>
                        </div>
                    </div>
                </div>
                <div class="option-card-footer">
                    <a asp-controller="Booking" asp-action="Professionals"
                       asp-route-branchId="@ViewBag.BranchId"
                       asp-route-branchServiceId="@service.Id"
                       class="btn btn-primary btn-block">
                        Seleccionar Servicio
                    </a>
                </div>
            </div>
        }
    </div>

    <div class="step-navigation">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        <span class="material-symbols-outlined">arrow_back</span>
        <span>Volver a Sucursales</span>
    </a>
    <div></div>
    </div>
</div>
