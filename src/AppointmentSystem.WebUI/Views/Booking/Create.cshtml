@model AppointmentSystem.Application.DTOs.CreateAppointmentDto
@{
    ViewData["Title"] = "Confirmar Reserva";
}

<h2>Complete sus datos para la reserva</h2>
<p>Fecha y Hora: @Model.StartTime.ToString("f")</p>

<div asp-validation-summary="ModelOnly" style="color: var(--error-color); margin-bottom: 1rem;"></div>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="BranchId" />
    <input type="hidden" asp-for="BranchServiceId" />
    <input type="hidden" asp-for="ProfessionalId" />
    <input type="hidden" asp-for="StartTime" />

    <div class="form-group">
        <label asp-for="ClientFirstName">Nombre</label>
        <input asp-for="ClientFirstName" required />
    </div>
    <div class="form-group">
        <label asp-for="ClientLastName">Apellido</label>
        <input asp-for="ClientLastName" required />
    </div>
    <div class="form-group">
        <label asp-for="ClientEmail">Correo Electrónico</label>
        <input asp-for="ClientEmail" type="email" required />
    </div>
    <div class="form-group">
        <label asp-for="ClientPhone">Teléfono</label>
        <input asp-for="ClientPhone" required />
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notas adicionales</label>
        <textarea asp-for="Notes"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Reservar Cita</button>
    <a href="javascript:history.back()" class="btn btn-secondary">Cancelar</a>
</form>
